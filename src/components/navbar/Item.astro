---
import type { Site } from '../../types'

type Props = {
  site: Site
}

const { site } = Astro.props
---

<li>
  {
    site.disabled ? (
      <a href="#" class="dropdown-link link-disabled" rel="noopener" onclick="return false">
        {site.title}
      </a>
    ) : (
      <a href={site.url} class="dropdown-link GTM-site-link" target="_blank" rel="noopener">
        {site.title}
      </a>
    )
  }
</li>
